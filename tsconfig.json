{
  "compilerOptions": {
    "target": "ES2024",
    "outDir": "lib",
    "module": "ES2020",
    "strict": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "include": ["src"]
}
